{
    "manifest_version": 3,
    "name": "QuickQR: link to QR code",
    "version": "1.0",
    "description": "Generate QR codes quickly for the current page or custom URL",
    "icons": {
      "128": "icon-128-red.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icon-128-red.png"
      }
    },
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://api.qrserver.com/"
    ],
    "background": {
        "service_worker": "background.js"
      }
  }
  